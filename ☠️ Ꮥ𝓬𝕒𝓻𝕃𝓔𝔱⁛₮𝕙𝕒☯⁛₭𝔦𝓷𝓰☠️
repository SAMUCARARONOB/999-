local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local Subtitle = Instance.new("TextLabel")
local Button = Instance.new("TextButton")
local UIScale = Instance.new("UIScale")
local Corner = Instance.new("UICorner")
local Gradient = Instance.new("UIGradient")
local TweenService = game:GetService("TweenService") -- Serviço para animações

-- Configuração da interface
ScreenGui.Parent = game.CoreGui
ScreenGui.Name = "CustomTechUI"

-- Configuração do Frame
Frame.Parent = ScreenGui
Frame.AnchorPoint = Vector2.new(0.5, 0.5)
Frame.Position = UDim2.new(0.5, 0, 0.5, 0)
Frame.Size = UDim2.new(0.6, 0, 0.4, 0)
Frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
Frame.BackgroundTransparency = 0.3
Frame.BorderSizePixel = 0

-- Cantos arredondados e gradiente no Frame
Corner.CornerRadius = UDim.new(0.1, 0)
Corner.Parent = Frame
Gradient.Parent = Frame
Gradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(0, 85, 255)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(170, 255, 255))
}
Gradient.Rotation = 45

-- Configuração do Título
Title.Parent = Frame
Title.Size = UDim2.new(0.8, 0, 0.2, 0)
Title.Position = UDim2.new(0.1, 0, 0.1, 0)
Title.BackgroundTransparency = 1
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Text = "OP-SCRIPTS"
Title.Font = Enum.Font.SourceSansBold
Title.TextScaled = true
Title.TextTransparency = 1 -- Inicialmente transparente

-- Configuração do Subtítulo
Subtitle.Parent = Frame
Subtitle.Size = UDim2.new(0.8, 0, 0.1, 0)
Subtitle.Position = UDim2.new(0.1, 0, 0.4, 0)
Subtitle.BackgroundTransparency = 1
Subtitle.TextColor3 = Color3.fromRGB(200, 200, 200)
Subtitle.Text = "Bem-vindo ao OP-SCRIPTS"
Subtitle.Font = Enum.Font.SourceSans
Subtitle.TextScaled = true
Subtitle.TextTransparency = 1 -- Inicialmente transparente

-- Configuração do Botão
Button.Parent = Frame
Button.Size = UDim2.new(0.6, 0, 0.2, 0)
Button.Position = UDim2.new(0.2, 0, 0.7, 0)
Button.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
Button.TextColor3 = Color3.fromRGB(255, 255, 255)
Button.Text = "Clique para iniciar"
Button.Font = Enum.Font.SourceSansBold
Button.TextScaled = true
Button.BorderSizePixel = 0

-- Efeitos de escala
UIScale.Parent = Frame
UIScale.Scale = 1.1

-- Efeitos de transparência do Frame
local function fadeIn(frame, duration)
    local tween = TweenService:Create(frame, TweenInfo.new(duration), {BackgroundTransparency = 0})
    tween:Play()
end

-- Animação de entrada
Frame:TweenSize(UDim2.new(0.8, 0, 0.5, 0), "Out", "Quad", 1, true)
fadeIn(Frame, 1)

-- Efeitos futuristas
local function onButtonClick()
    Button.Text = "Iniciando..."
    wait(1)
    Frame:TweenSizeAndPosition(UDim2.new(0, 0, 0, 0), UDim2.new(0.5, 0, 0.5, 0), "Out", "Quad", 1, true, function()
        -- Executa o script após a animação de saída do Frame
        loadstring(game:HttpGet("https://raw.githubusercontent.com/SAMUCARARONOB/92929923837373-/refs/heads/main/OPENKEYSMLCST"))()
        ScreenGui:Destroy()
    end)
end

Button.MouseButton1Click:Connect(onButtonClick)

local uiStroke = Instance.new("UIStroke")
uiStroke.Parent = Frame
uiStroke.Thickness = 2
uiStroke.Color = Color3.fromRGB(255, 255, 255)

-- Efeitos de desvanecimento nos textos
local function fadeInText(label, duration)
    local tween = TweenService:Create(label, TweenInfo.new(duration), {TextTransparency = 0})
    tween:Play()
end

fadeInText(Title, 1.5)
fadeInText(Subtitle, 2)

-- Redimensionamento dinâmico do botão ao passar o mouse
local function onButtonHover()
    Button:TweenSize(UDim2.new(0.65, 0, 0.22, 0), "Out", "Quad", 0.2, true)
end

local function onButtonLeave()
    Button:TweenSize(UDim2.new(0.6, 0, 0.2, 0), "Out", "Quad", 0.2, true)
end

Button.MouseEnter:Connect(onButtonHover)
Button.MouseLeave:Connect(onButtonLeave)
