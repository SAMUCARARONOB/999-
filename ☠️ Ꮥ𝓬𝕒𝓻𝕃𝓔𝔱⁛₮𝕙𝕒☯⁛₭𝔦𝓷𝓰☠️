Subtitle.TextTransparency = 1 -- Inicialmente transparente

-- Configuração do Botão
Button.Parent = Frame
Button.Size = UDim2.new(0.6, 0, 0.2, 0)
Button.Position = UDim2.new(0.2, 0, 0.7, 0)
Button.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
Button.TextColor3 = Color3.fromRGB(255, 255, 255)
Button.Text = "Clique para iniciar"
Button.Font = Enum.Font.SourceSansBold
Button.TextScaled = true
Button.BorderSizePixel = 0

-- Efeitos de escala
UIScale.Parent = Frame
UIScale.Scale = 1.1

-- Efeitos de transparência do Frame
local function fadeIn(frame, duration)
    local tween = TweenService:Create(frame, TweenInfo.new(duration), {BackgroundTransparency = 0})
    tween:Play()
end

-- Animação de entrada
Frame:TweenSize(UDim2.new(0.8, 0, 0.5, 0), "Out", "Quad", 1, true)
fadeIn(Frame, 1)

-- Efeitos futuristas
local function onButtonClick()
    Button.Text = "Iniciando..."
    wait(1)
    Frame:TweenSizeAndPosition(UDim2.new(0, 0, 0, 0), UDim2.new(0.5, 0, 0.5, 0), "Out", "Quad", 1, true, function()
        -- Executa o script após a animação de saída do Frame
        local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local ScrollingFrame = Instance.new("ScrollingFrame")
local UIGridLayout = Instance.new("UIGridLayout")
local UICorner = Instance.new("UICorner")
local UIStroke = Instance.new("UIStroke")
local dragging, dragInput, dragStart, startPos

ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

Frame.Parent = ScreenGui
Frame.AnchorPoint = Vector2.new(0.5, 0.5)
Frame.Position = UDim2.new(0.5, 0, 0.5, 0)
Frame.Size = UDim2.new(0, 450, 0, 370)
Frame.BackgroundColor3 = Color3.fromRGB(25, 25, 112)

UICorner.CornerRadius = UDim.new(0, 20)
UICorner.Parent = Frame

UIStroke.Color = Color3.fromRGB(0, 255, 255)
UIStroke.Thickness = 2
UIStroke.Parent = Frame

ScrollingFrame.Parent = Frame
ScrollingFrame.Size = UDim2.new(1, -20, 1, -20)
ScrollingFrame.Position = UDim2.new(0, 10, 0, 10)
ScrollingFrame.CanvasSize = UDim2.new(0, 0, 2.2, 0)
ScrollingFrame.ScrollBarThickness = 8
ScrollingFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 112)
ScrollingFrame.BackgroundTransparency = 0.1

UIGridLayout.Parent = ScrollingFrame
UIGridLayout.SortOrder = Enum.SortOrder.LayoutOrder
UIGridLayout.CellSize = UDim2.new(1, 0, 0, 50)
UIGridLayout.CellPadding = UDim2.new(0, 0, 0, 10)

local scripts = {
    {"Rochips Universal", "https://glot.io/snippets/gzrux646yj/raw/main.ts"},
